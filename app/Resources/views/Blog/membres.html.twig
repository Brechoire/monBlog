{% extends 'base.html.twig' %}
{% block namepage %}Les membres{% endblock %}
{% block body %}

    <div class="container">
        <div class="row">
            <h1 class="text-center">Liste des membres</h1>
            <div class="col-md-6 col-md-offset-3">
                {% for user in users %}
                    Id : {{ user.idMembre }}<br>
                    Pseudo : <a href="{{ path('profil', {'id': user.idMembre}) }}">{{ user.pseudo }}</a><br>
                    Email : {{ user.email }}<br>
                    <hr>
                    {% else %}
                    Il n'y a aucun membre
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}